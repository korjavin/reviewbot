# ── ReviewBot ─────────────────────────────────────
HOSTNAME=reviewbot.example.com
GITHUB_APP_ID=123456
GITHUB_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----...
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_CLIENT_ID=Iv1.xxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx
PORT=8080
BASE_URL=https://reviewbot.example.com

# ── n8n ───────────────────────────────────────────
N8N_HOSTNAME=n8n.example.com
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# ── AnythingLLM ───────────────────────────────────
ANYTHINGLLM_HOSTNAME=kb.example.com
# Get from AnythingLLM UI → Settings → API Keys
ANYTHINGLLM_API_KEY=

# ── LLM Provider (shared) ─────────────────────────
# gemini | claude | openai | ollama
LLM_PROVIDER=gemini
LLM_MODEL=gemini-1.5-flash
LLM_API_KEY=

# ── Intel markdown files (host path) ──────────────
# Folder with .md intel files, mounted read-only into AnythingLLM
INTELS_DIR=./intels

# ── Infrastructure ────────────────────────────────
NETWORK_NAME=traefik_network
